<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:padding="20dp"
    android:background="@color/standard_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp">

        <EditText
            android:id="@+id/enter_new_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_name_hint"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/nvm"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:text="@string/nvm_label"
            android:textColor="@color/standard_text_color"
            android:fontFamily="@font/standard_font"
            android:backgroundTint="@color/delete_button_color"
            android:layout_alignParentStart="true"
            android:onClick="nvm"/>

        <Button
            android:id="@+id/save"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:text="@string/save_label"
            android:textColor="@color/standard_text_color"
            android:fontFamily="@font/standard_font"
            android:backgroundTint="@color/standard_button_color"
            android:layout_alignParentEnd="true"
            android:onClick="save"/>

    </RelativeLayout>

</LinearLayout>