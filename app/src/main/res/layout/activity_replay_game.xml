<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_replay_game"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:padding="20dp"
    android:background="@color/standard_background_color">

    <TextView
        android:id="@+id/player_move"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="@color/standard_text_color"
        android:text="White's move"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/next_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next_move_label"
            android:backgroundTint="@color/standard_button_color"
            android:onClick="nextMove"/>

        <Button
            android:id="@+id/previous_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prev_move_label"
            android:backgroundTint="@color/standard_button_color"
            android:onClick="prevMove"/>
    </LinearLayout>
</LinearLayout>